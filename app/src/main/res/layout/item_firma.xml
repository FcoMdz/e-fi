<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:columnCount="4"
    android:rowCount="3"
    android:id="@+id/parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/clienteTextView"
        android:layout_row="0"
        android:layout_columnWeight="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="Cliente: "
        android:textAlignment="center"
        android:layout_marginBottom="5sp"
        />

    <TextView
        android:id="@+id/fechaTextView"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:text="Fecha: "
        android:textAlignment="center"
        android:layout_marginBottom="5sp"
        />

    <TextView
        android:id="@+id/RFCTextView"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:text="RFC: "
        android:textAlignment="center"
        android:layout_marginBottom="5sp"
        />

    <TextView
        android:id="@+id/ContraTextView"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="2"
        android:text="ContraseÃ±a: "
        android:layout_columnSpan="2"
        android:textAlignment="center"
        android:layout_marginBottom="5sp"
        />

    <ImageButton
        android:id="@+id/contactoButton"
        android:layout_row="2"
        android:layout_column="0"
        android:text="Contacto"
        android:layout_columnWeight="1"
        android:src="@drawable/baseline_contacts_24"
        android:textColor="@color/black"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:backgroundTint="@color/logo_gray"
        />

    <ImageButton
        android:id="@+id/descargarButton"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="Descargar"
        android:src="@drawable/baseline_download_24"
        android:textColor="@color/black"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:backgroundTint="@color/logo_gray"
        />

    <ImageButton
        android:id="@+id/editarButton"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="Editar"
        android:src="@drawable/baseline_mode_edit_24"
        android:textColor="@color/black"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:backgroundTint="@color/logo_gray"
        />

    <ImageButton
        android:id="@+id/eliminarButton"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:text="Eliminar"
        android:src="@drawable/baseline_delete_24"
        android:textColor="@color/black"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:backgroundTint="@color/logo_gray"
        />

</GridLayout>
