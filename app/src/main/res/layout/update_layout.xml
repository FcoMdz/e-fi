<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header"
                android:orientation="horizontal"

                >
                <ImageButton
                    android:id="@+id/regresar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:backgroundTint="@color/logo_gray"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titulo"
                    android:text="Actualizar"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/nuevoNombreEditText"
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nuevo Correo ElectrÃ³nico (Contacto)"
                 />

            <Button
                android:id="@+id/fechaEditButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nuevoNombreEditText"
                android:text="Seleccionar nueva fecha de registro"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/subirKeyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subir nuevo archivo key"
                android:layout_below="@id/fechaEditButton"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                 />

            <Button
                android:id="@+id/subirCerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subir nuevo archivo cer"
                android:layout_below="@id/subirKeyButton"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/actualizarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar Datos"
                android:layout_below="@id/subirCerButton"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
